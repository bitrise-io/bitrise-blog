<%= content_for :html_title, @post.seo_title %>
<%= content_for :meta_description, @post.meta_description %>

<div class="post-content">
  <!-- Post author -->
  <div class="author-info">
    <img src="<%= @post.author.profile_image %>">
    <div class="name-and-title">
      <%= link_to "#{@post.author.first_name} #{@post.author.last_name}", buttercms_author_path(@post.author.slug) %>
      <% if !@post.author.title.eql? "" %>
        <p><%= @post.author.title %></p>
      <% end %>
    </div>
  </div>

  <!-- Post title -->
  <h1 class="post-title"><%= @post.title %></h1>

  <div class="publish-date-and-tags">
    <!-- Publish date -->
    <p class="publish-date"><%= Time.parse(@post.published).strftime('%B %d, %Y') %></p>
    <!-- Post categories -->
    <% @post.categories.each do |category| %>
      <p class="divider-slash">/</p><%= link_to category.name.capitalize, buttercms_category_path(category.slug), :title => category.name, class: "category-element" %>
    <% end %>
  </div>

  <!-- Post featured image -->
  <div class="post-featured-image">
    <img src="<%= @post.featured_image %>">
  </div>
