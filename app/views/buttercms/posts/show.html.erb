<%= content_for :html_title, @post.seo_title %>
<%= content_for :meta_description, @post.meta_description %>

<div class="post-content">
  <!-- Post author -->
  <div class="author-info">
    <img src="<%= @post.author.profile_image %>">
    <div class="name-and-title">
      <%= link_to "#{@post.author.first_name} #{@post.author.last_name}", buttercms_author_path(@post.author.slug) %>
      <% if !@post.author.title.eql? "" %>
        <p><%= @post.author.title %></p>
      <% end %>
    </div>
  </div>

  <!-- Post title -->
  <h1 class="post-title"><%= @post.title %></h1>

  <div class="publish-date-and-tags">
    <!-- Publish date -->
    <p class="publish-date"><%= Time.parse(@post.published).strftime('%B %d, %Y') %></p>
    <!-- Post categories -->
    <% @post.categories.each do |category| %>
      <p class="divider-slash">/</p><%= link_to category.name.capitalize, buttercms_category_path(category.slug), :title => category.name, class: "category-element" %>
    <% end %>
  </div>

  <!-- Post featured image -->
  <div class="post-featured-image">
    <img src="<%= @post.featured_image %>">
  </div>

  <!-- Post body -->
  <div class="post-body">
    <%= @post.body.html_safe %>
  </div>

  <div class="next-post">
    <!-- Link to Next Post -->
    <% if @next_post %>
      <%= link_to @next_post.title, buttercms_post_path(@next_post.slug), :title => @next_post.title, class: "next-post-button" %>
    <% end %>
  </div>

  <!--
  // For sharing, we recommend https://www.addthis.com/get/sharing or https://sumome.com/app/share
  -->

  <div id="disqus_thread"></div>
  <script type="text/javascript">
      /* * * CONFIGURATION VARIABLES * * */
      var disqus_shortname = 'XXXXXXXX';

      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function() {
          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
          dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
  </script>
</div>